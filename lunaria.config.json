{
    "$schema": "./node_modules/@lunariajs/core/config.schema.json",
    "dashboard": {
        "title": "Localization Status",
        "description": "Online localization status dashboard of the KAPLAY Site.",
        "customCss": ["./src/styles/lunaria.css"]
    },
    "outDir": "./dist/translation-status",
    "repository": {
        "name": "kaplayjs/kaplay-site",
        "branch": "main",
        "hosting": "github"
    },
    "files": [
        {
            "location": "content/guides/**/*.md",
            "pattern": "content/guides/@lang/@path",
            "type": "universal"
        },
        {
            "location": "src/locales/**/*.ts",
            "pattern": "src/locales/@lang/@path",
            "type": "universal"
        }
    ],
    "defaultLocale": {
        "label": "English",
        "lang": "en"
    },
    "locales": [
        {
            "label": "Spanish",
            "lang": "es"
        }
    ]
}
