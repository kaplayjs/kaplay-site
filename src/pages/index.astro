---
import About from "@/components/Land/About.astro";
import AboutFeatured from "@/components/Land/AboutFeatured.astro";
import BlocksSection from "@/components/Land/Blocks/BlocksSection.astro";
import LandButton from "@/components/Land/LandButton.astro";
import TestimonialSection from "@/components/Land/TestimonialSection.astro";
import Messages from "@/components/Util/Messages.astro";
import People from "@/components/Util/People.astro";
import NavbarPage from "@/layouts/NavbarPage.astro";
import { assets } from "@kaplayjs/crew";
---

<NavbarPage
    meta={{
        title: "KAPLAY.js, HTML5 Game library for JavaScript and TypeScript. Free & Open Source.",
        description:
            "KAPLAY.js is a JavaScript and TypeScript HTML5 game engine library that makes it easy and fun to create games. Is the successor of Kaboom.js.",
        keywords: "kaplay, kaboom.js, kaplay.js, game, library, javascript, easy, simple, html5, html5 games",
    }}
    pageClass="land"
>
    <About>
        <Fragment slot="title">
            The <span class="font-hand text-primary">fun</span> and open source game
            <span class="font-hand text-[#fcef8d]">library</span> for
            <span class="font-hand text-[#ffb879]">HTML5 <span class="text-[#bf7adf]">Games</span></span>
        </Fragment>
        <Fragment slot="description">
            <strong class="text-white">KAPLAY</strong>
            <span class="italic">(/ˈkæpleɪ/)</span> is a
            <span class="text-white">JavaScript</span> and <span class="text-white">TypeScript</span>
            game library that makes it <span class="text-white">easy</span> to create games for the web. It's <span class="text-white">free</span>, open-source
            and fun.
        </Fragment>
        <Fragment slot="promotion">
            <img class="w-8 shrink-0" src="/sok.png" alt="SOK" width="32" height="42" />
            <p>
                Hey! <a class="link link-hover text-primary" href="blog/sok5">State of KAPLAY #5</a> is out! Get updated on the latest features and improvements
                in KAPLAY.js.
            </p>
        </Fragment>
        <Fragment slot="buttons">
            <LandButton kind="yellowish" href="/guides/"> Explore Docs </LandButton>

            <LandButton kind="greenish" href="https://play.kaplayjs.com"> Play in KAPLAYGround </LandButton>

            <LandButton kind="blueish" href="https://discord.com/invite/aQ6RuQm3TF" target="_blank"> Join our Discord </LandButton>
        </Fragment>
        <Fragment slot="featured">
            <AboutFeatured friend="apple"> Friendly API. Easy to learn, easy to teach. </AboutFeatured>

            <AboutFeatured friend="bag"> A bunch of examples and assets to get started. </AboutFeatured>

            <AboutFeatured friend="bean"> Strong support for TypeScript included. </AboutFeatured>

            <AboutFeatured friend="heart"> It's Open Source, free and always will be. </AboutFeatured>
        </Fragment>
    </About>
    <BlocksSection>
        <Fragment slot="title">
            An enjoyable <span class="font-hand text-[#ee8fcb] text-[106%]">API</span>
            based
            <span class="inline-flex items-baseline gap-[0.25em]">
                on
                <img class="shrink-0 w-8 sm:w-10 -rotate-6" src={assets.steel.outlined} width="40" height="40" aria-hidden="true" />
                <span class="font-hand text-primary text-[106%]">blocks</span>
            </span>
        </Fragment>
        <Fragment slot="description">
            <p class="text-lg sm:text-xl md:leading-[1.6]">
                <span class="font-bold">KAPLAY</span> is a lot of
                <span class="font-hand text-[106%]">fun</span> to use and easy to learn. It was uniquely designed with
                <strong class="font-medium text-white">blocks and functions</strong>
                to make it intuitive and engaging. Just take a look at the examples below and experience it for yourself!
            </p>
        </Fragment>
        <Fragment slot="blocks-title">
            Plus many more
            <span class="font-hand text-[#8db7ff] text-[106%]">simple</span> and
            <span class="font-hand text-primary text-[106%]">fun</span> to use
            <span class="text-white">methods</span> and
            <span class="text-white">functions</span>
        </Fragment>
        <Fragment slot="blocks-description">
            No more long nested methods&nbsp;like<br />
            <code class="font-medium text-base bg-white/10 px-2 py-0.5 rounded-lg box-decoration-clone">
                obj&ZeroWidthSpace;.position&ZeroWidthSpace;.transform&ZeroWidthSpace;.translate(10, 20)
            </code>
        </Fragment>
        <Fragment slot="buttons">
            <LandButton kind="mini-yellowish" href="/guides/install/" target="_blank" rel="noreferrer noopener"> Get Started (Docs) </LandButton>
            <LandButton kind="mini-redish" href="https://play.kaplayjs.com/" target="_blank" rel="noreferrer noopener"> Explore more examples </LandButton>
        </Fragment>
    </BlocksSection>
    <TestimonialSection>
        <Fragment slot="title">
            <span class="inline-flex items-end gap-[0.25em]">
                <span class="font-hand text-[108%] text-[#ffb879]">Voices</span>
                <img class="shrink-0 w-10 sm:w-14" src={assets.burpman.outlined} width="40" height="27" aria-hidden="true" />
            </span>
            of
            <span class="font-hand text-[108%]">
                <span class="text-primary">KAPLAY</span><span class="text-[#6bc96c]">ers</span>
            </span>
        </Fragment>
        <Fragment slot="description">
            Don't just take our word for it, see what our users say about
            <strong>KAPLAY</strong>! We're&nbsp;proud to have such a great community.<br />
            <a href="https://discord.com/invite/aQ6RuQm3TF" target="_blank" class="inline-flex gap-1 align-bottom font-semibold text-indigo-300">
                <img class="self-center shrink-0 w-5 sm:w-6 h-auto" src={assets.discord.outlined} width="24" height="24" aria-hidden="true" />
                Join our Discord
            </a>
            to be a part of it!
        </Fragment>
    </TestimonialSection>
    <People>
        <Fragment slot="sponsors-title">
            Our <span class="text-white">great</span>
            <span class="inline-flex items-baseline gap-1 font-hand text-[#ee8fcb] text-[108%]">
                <img class="relative top-0.5 shrink-0 w-6 sm:w-8" src={assets.heart.outlined} width="32" height="28" aria-hidden="true" />
                <span>Sponsors</span>
            </span>
        </Fragment>
        <Fragment slot="contributors-title">
            <span class="text-white">People</span> who
            <span class="inline-flex items-baseline gap-1 font-hand text-primary text-[106%]">
                <img class="relative top-0.5 shrink-0 w-6 md:w-8" src={assets.plus.outlined} width="32" height="32" aria-hidden="true" />
                contributed
            </span>
            to&nbsp;<span class="text-white">KAPLAY</span>.js
        </Fragment>
        <Fragment slot="contributors-description">
            KAPLAY is the result of a great community effort. You can support us, too, by contributing or&nbsp;donating.
        </Fragment>
        <Fragment slot="contributors-buttons">
            <LandButton kind="mini-yellowish" href="https://opencollective.com/kaplay/donate" target="_blank" rel="noreferrer noopener">
                <img class="shrink-0 w-6 h-6 object-contain" src={assets.money_bag.outlined} width="24" height="24" aria-hidden="true" />
                Consider Donating
            </LandButton>
            <LandButton kind="githubish" href="https://github.com/kaplayjs/kaplay" target="_blank" rel="noreferrer noopener">
                <img class="shrink-0 w-6 h-5 object-contain" src={assets.github.outlined} width="24" height="20" aria-hidden="true" />
                Contribute on GitHub
            </LandButton>
        </Fragment>
        <Fragment slot="more-contributors"> more contributors </Fragment>
    </People>
    <Messages />
</NavbarPage>
