---
import DocFor from "../DocFor.astro";

type Argument = {
    kind: string;
    id: number;
    typeName: string;
};

type Props = {
    args: Argument[];
};

const { args } = Astro.props;
---

{
    args.map((arg, i) => (
        <>
            <DocFor data={arg} depth={0} /> {i >= args.length - 1 ? "" : "| "}
        </>
    ))
}
