---
import DocFor from "../DocFor.astro";
import JSDoc from "../JSDoc.astro";
import Modifiers from "../Other/Modifiers.astro";
import Parameters from "../Other/Parameters.astro";
import Title from "../Utils/Title.astro";
import type { DataTypeProps } from "../Utils/types.ts";

type TypeDataMethodDeclaration = {
    kind: "MethodDeclaration";
    id: number;
    name: string;
    parameters: any[];
    type: any[];
    questionToken: boolean;
    modifiers?: any[];
};

interface Props extends DataTypeProps {
    data: TypeDataMethodDeclaration;
}

const { data, depth } = Astro.props;
---

{data.modifiers ? <Modifiers modifiers={data.modifiers} /> : ""}
{" "}<Title class="inline" depth={depth}>{data.name}</Title>{data.questionToken ? "?." : ""}(<Parameters data={data.parameters} depth={depth} />)
<span>{"=>"} <DocFor data={data.type} depth={depth} /></span>

<JSDoc data={data} />
