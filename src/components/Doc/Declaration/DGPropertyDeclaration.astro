---
import DocFor from "../DocFor.astro";
import JSDoc from "../JSDoc.astro";
import Modifiers from "../Other/Modifiers.astro";
import Title from "../Utils/Title.astro";

type TypeDataPropertyDeclaration = {
    kind: "PropertyDeclaration";
    id: number;
    name: string;
    type: any[];
    questionToken: boolean;
    modifiers?: any[];
};

type Props = {
    data: TypeDataPropertyDeclaration;
    depth: number;
};

const { data, depth } = Astro.props;
---

{data.modifiers ? <Modifiers modifiers={data.modifiers} /> : ""}
{" "}<Title class="inline" depth={depth}>{data.name}</Title>{data.questionToken ? "?" : ""}: <DocFor data={data.type} depth={depth} />
<JSDoc data={data} />
