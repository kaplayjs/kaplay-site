---
interface Props {
    title: string;
    id: string;
    isOpen?: boolean;
}

const { title, id, isOpen = true } = Astro.props;
---

<div
    class="folder | flex flex-col"
    folder-state={isOpen ? "open" : "closed"}
    id={id}
>
    <p
        class="folder-title | btn btn-ghost btn-sm w-full justify-start text-left text-lg"
    >
        {title}
    </p>
    <ul
        class="folder-content | mx-4 pl-0.5 flex-col gap-2 border-l border-base-content/30"
    >
        <slot />
    </ul>
</div>

<script>
    document.addEventListener("click", (event) => {
        const target = event.target as HTMLElement;

        if (
            target.classList.contains("folder-title") ||
            target.closest(".folder-title")
        ) {
            const folder = target.closest(".folder");
            if (folder) {
                const folderState = folder.getAttribute("folder-state");
                folder.setAttribute(
                    "folder-state",
                    folderState === "open" ? "closed" : "open",
                );
            }
        }
    });
</script>
