---
// A card that represents a blog post. With Image of the blog, title, author, date and a short description.

import { getEntry } from "astro:content";
import CrewBadge from "../Content/CrewBadge.astro";

type Props = {
    entry: string;
};

const { entry: entryName } = Astro.props;

const entry = await getEntry("blog", entryName);
if (!entry) return;

const entryData = entry.data;
---

<article class="flex flex-col rounded-box bg-base-200 sm:flex-row">
    <figure class="relative aspect-video flex-none rounded-box sm:w-[260px] md:w-[200px] lg:w-[260px] overflow-hidden">
        <a href={"/blog/" + entryName}>
            <img
                src={"/" + entryData.image}
                alt={entryName + " featured image"}
                class="absolute inset-0 h-full w-full rounded-box object-cover bg-base-300 text-base-300 hover:scale-105 transition-all"
            />

            {entryData?.crewBadge && <CrewBadge {...entryData.crewBadge} class="absolute top-3 left-3" />}
        </a>
    </figure>
    <div class="flex-auto p-6">
        <main class="flex flex-col flex-wrap">
            <h1 class="text-xl font-semibold">
                <a href={"/blog/" + entryName} class="hover:underline">{entryData.title}</a>
            </h1>
            <p class="text-lg font-semibold text-primary">
                {entryData.author}
            </p>
            <time class="flex-none text-base font-medium text-gray-500">
                {
                    new Date(entryData.date).toLocaleDateString("en-US", {
                        year: "numeric",
                        month: "long",
                        day: "numeric",
                    })
                }
            </time>
        </main>
        <p class="mt-4">
            {entryData.description}
        </p>
    </div>
</article>
